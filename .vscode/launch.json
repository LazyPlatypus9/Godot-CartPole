{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linux",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "/usr/local/bin/godot-engine",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "args": ["--path", "${workspaceRoot}"]
        },
        {
            "name": "Godot-Windows",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "C:/Program Files/Godot/Godot_v4.2.1-stable_mono_win64/Godot.exe",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "args": ["--path", "${workspaceRoot}"],
        },
        {
            "name": "Pytorch-Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/pytorch_server.py",
            "python": "${workspaceFolder}/Python/.virtual/Scripts/python.exe"
        },
        {
            "name": "Flask-Service",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/flask_service.py",
            "python": "${workspaceFolder}/Python/.virtual/Scripts/python.exe"
        }
    ],
    "compounds": [
        {
            "name": "Windows",
            "configurations": ["Pytorch-Server", "Flask-Service", "Godot-Windows"],
            "stopAll": true
        }
    ]
}